{
  "hosting": {
    "target": "prod",
    "cleanUrls": true,
    "trailingSlash": true,
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/backend",
        "run": {
          "serviceId": "busola-backend-main",
          "region": "europe-west3"
        }
      },
      {
        "source": "/core-ui/**",
        "destination": "/core-ui/index.html"
      },
      {
        "source": "/service-catalog-ui/**",
        "destination": "/core-ui/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
